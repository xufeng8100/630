#built terrorists' corpus

import sys
reload(sys)
sys.setdefaultencoding('utf8')
tweets=[]
for screen_name in name:
     tweet = harvest_user_timeline(twitter_api, screen_name=screen_name,
               max_results=3300)
     tweets +=tweet
with open('terrorists corpus.txt', 'w') as f:
    for tweet in tweets:
        b=str(tweet['text'])
        f.write(b+'\n')
f.close()

#get normal tweets corpus

